<Window x:Class="DeviceShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceShop"
        mc:Ignorable="d"
        Title="DeviceShop" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <Grid Background="#FF25B2FF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16*"/>
                <ColumnDefinition Width="42*"/>
                <ColumnDefinition Width="42*"/>
            </Grid.ColumnDefinitions>

            <Image Source="./assets/logo.png"/>
            <Button Grid.Column="2" Margin="10" Width="100" Height="50" HorizontalAlignment="Right" Click="BackClick" Content="Назад"/>
        </Grid>

        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
